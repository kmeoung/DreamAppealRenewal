<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <include
            layout="@layout/action_bar_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="탈퇴 신청이 접수되었습니다.\n데이터 삭제는 최대 2주 내로 처리되며\n그 안에 탈퇴를 취소할 수 있습니다."
                android:textColor="@color/black"
                android:fontFamily="@font/nanum_square_round_b"
                android:textSize="16sp"
                android:layout_marginTop="30dp"
                android:lineSpacingExtra="@dimen/text_line_spacing"/>

        <TextView
                android:id="@+id/tv_cancel_leave_member"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nanum_square_round_b"
                android:gravity="center"
                android:text="탈퇴 취소하기"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:layout_marginTop="45dp"
                android:background="@drawable/bg_round_rectangle_blue"
                android:visibility="visible"/>

        <TextView
                android:id="@+id/tv_go_login"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nanum_square_round_r"
                android:gravity="center"
                android:text="로그인 화면으로 이동하기"
                android:textColor="@color/nice_blue"
                android:textSize="16sp"
                android:visibility="visible"/>


    </LinearLayout>
</LinearLayout>