<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_three"
        android:orientation="vertical">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/srl_refresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                <!--상단 버튼 및 정보들-->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="7dp"
                        android:baselineAligned="false"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="15.3dp"
                        android:paddingRight="15.3dp">
                    <!--나의 꿈-->
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="51dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="0.8"
                            android:background="@drawable/bg_round_box_nice_blue"
                            android:elevation="3dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                        <LinearLayout
                                android:id="@+id/ll_dreams"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                            <TextView
                                    android:id="@+id/tv_dream_level"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nanum_square_round_b"
                                    android:gravity="center"
                                    android:text="@string/lv_00"
                                    android:textColor="@color/black"
                                    android:textSize="17.7sp" />

                            <TextView
                                    android:id="@+id/tv_dream_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:fontFamily="@font/nanum_square_round_b"
                                    android:gravity="center"
                                    android:text="@string/str_first_dream"
                                    android:textColor="@color/nice_blue"
                                    android:textSize="13.3sp" />


                        </LinearLayout>

                    </LinearLayout>
                    <!--나의 꿈-->

                    <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1" />
                    <!--팔로워-->
                    <LinearLayout
                            android:id="@+id/ll_follower"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:gravity="center"
                            android:orientation="vertical">

                        <TextView
                                android:id="@+id/tv_follwer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bmjua"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="15.7sp" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/nanum_square_round_r"
                                android:gravity="center"
                                android:text="@string/str_follower"
                                android:textColor="@color/brown_grey"
                                android:textSize="14.3sp" />


                    </LinearLayout>
                    <!--팔로워-->

                    <!--실현성과-->
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:gravity="center"
                            android:orientation="vertical">

                        <TextView
                                android:id="@+id/tv_action_post_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bmjua"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="15.7sp" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/nanum_square_round_r"
                                android:gravity="center"
                                android:text="@string/str_action_post"
                                android:textColor="@color/brown_grey"
                                android:textSize="14.3sp" />


                    </LinearLayout>
                    <!--실현성과-->

                    <!--실천인증-->
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:gravity="center"
                            android:orientation="vertical">

                        <TextView
                                android:id="@+id/tv_achievement_post_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bmjua"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="15.7sp" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/nanum_square_round_r"
                                android:gravity="center"
                                android:text="@string/str_achievement_post"
                                android:textColor="@color/brown_grey"
                                android:textSize="14.3sp" />


                    </LinearLayout>
                    <!--실천인증-->
                </LinearLayout>
                <!--상단 버튼 및 정보들-->

                <!--상단 꿈 설명-->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15.3dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15.3dp"
                        android:background="@drawable/bg_round_box_gray_2"
                        android:elevation="3dp"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginRight="17dp"
                            android:gravity="center"
                            android:orientation="horizontal">
                        <!--꿈 프로필 이미지-->
                        <ImageView
                                android:id="@+id/iv_dream_profile"
                                android:layout_width="53dp"
                                android:layout_height="53dp"
                                android:layout_marginRight="13dp"
                                android:src="@drawable/drawer_user" />
                        <!--꿈 프로필 이미지-->

                        <!--꿈 수식어 및 꿈 명-->
                        <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                            <LinearLayout
                                    android:id="@+id/ll_dream_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center|left"
                                    android:orientation="vertical">

                                <TextView
                                        android:id="@+id/tv_value_style"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/nanum_pen"
                                        android:text=""
                                        android:textColor="@color/black"
                                        android:textSize="22sp"
                                        android:layout_marginBottom="3dp"/>

                                <TextView
                                        android:id="@+id/tv_job"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/bmjua"
                                        android:maxLength="30"
                                        android:text=""
                                        android:textColor="@color/black"
                                        android:textSize="22sp" />

                            </LinearLayout>

                            <TextView
                                    android:id="@+id/tv_init_dream_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:layout_margin="3dp"
                                    android:background="@drawable/bg_round_box_gray_2"
                                    android:lineSpacingExtra="@dimen/text_line_spacing"
                                    android:elevation="3dp"
                                    android:fontFamily="@font/nanum_square_round_b"
                                    android:gravity="center"
                                    android:text="@string/str_default_dream_title"
                                    android:textColor="@color/black"
                                    android:textSize="13sp" />

                        </RelativeLayout>
                        <!--꿈 수식어 및 꿈 명-->
                    </LinearLayout>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <LinearLayout
                                android:id="@+id/ll_dream_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="19dp"
                                android:orientation="vertical">

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                <!--내 꿈 설명-->
                                <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rv_dream_description"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:paddingLeft="22dp"
                                        android:paddingRight="20dp" />

                                <!--내 꿈 설명-->

                            </LinearLayout>

                            <Button
                                    android:id="@+id/btn_dream_description_more"
                                    android:layout_width="48dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="bottom|end"
                                    android:background="@null"
                                    android:fontFamily="@font/nanum_square_round_r"
                                    android:gravity="center"
                                    android:text="@string/str_more_view"
                                    android:textColor="@color/text_gray"
                                    android:textSize="12sp"
                                    android:visibility="gone" />


                        </LinearLayout>

                        <TextView
                                android:id="@+id/tv_init_dream_description"
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/bg_round_box_gray_2"
                                android:lineSpacingExtra="@dimen/text_line_spacing"
                                android:elevation="3dp"
                                android:fontFamily="@font/nanum_square_round_b"
                                android:gravity="center"
                                android:text="@string/str_default_dream_description"
                                android:textColor="@color/black"
                                android:textSize="13sp" />


                    </RelativeLayout>

                </LinearLayout>
                <!--상단 꿈 설명-->

                <TextView
                        android:layout_width="80dp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="13dp"
                        android:background="@color/background"
                        android:fontFamily="@font/nanum_pen"
                        android:gravity="center"
                        android:text="매력 / 계기"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                <!--내 꿈 이유-->
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:id="@+id/ll_merit_and_motive"
                            android:layout_width="380dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15.3dp"
                            android:layout_marginTop="1.5dp"
                            android:layout_marginRight="15.3dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/bg_round_box_gray_2"
                            android:elevation="3dp"
                            android:orientation="vertical"
                            android:paddingLeft="16dp"
                            android:paddingTop="6dp">

                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            <!--내 꿈 이유-->
                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                <TextView
                                        android:id="@+id/tv_merit_and_motive"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/nanum_square_round_r"
                                        android:lineSpacingExtra="@dimen/text_line_spacing"
                                        android:maxLines="3"
                                        android:paddingRight="19dp"
                                        android:text=""
                                        android:textColor="@color/black"
                                        android:textSize="12.3sp" />

                                <!--내 꿈 이유 더보기 버튼-->
                                <Button
                                        android:id="@+id/btn_merit_and_motive_more"
                                        android:layout_width="48dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="bottom|end"
                                        android:background="@null"
                                        android:fontFamily="@font/nanum_square_round_r"
                                        android:gravity="center"
                                        android:text="@string/str_more_view"
                                        android:textColor="@color/text_gray"
                                        android:textSize="11sp"
                                        android:visibility="gone" />
                                <!--내 꿈 이유 더보기 버튼-->

                            </LinearLayout>
                            <!--내 꿈 이유-->

                            <TextView
                                    android:id="@+id/tv_init_merit_and_motive"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginRight="16dp"
                                    android:layout_marginBottom="6dp"
                                    android:fontFamily="@font/nanum_square_round_b"
                                    android:gravity="center"
                                    android:lineSpacingExtra="@dimen/text_line_spacing"
                                    android:text="@string/str_default_merit_and_motive"
                                    android:textColor="@color/black"
                                    android:textSize="12.3sp"
                                    android:visibility="visible" />

                        </RelativeLayout>

                    </LinearLayout>


                </RelativeLayout>
                <!--내 꿈 이유-->

                <!--응원 / 댓글 / 공유-->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@null"
                            android:gravity="center|left"
                            android:orientation="horizontal"
                            android:paddingLeft="20dp"
                            android:paddingRight="14dp">

                        <!--불꽃 (좋아요)-->
                        <LinearLayout
                                android:id="@+id/ll_cheering_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                            <ImageView
                                    android:layout_width="12.7dp"
                                    android:layout_height="17dp"
                                    android:layout_marginRight="9.7dp"
                                    android:contentDescription="@string/str_content_description"
                                    android:src="@drawable/flame_clicked" />

                            <TextView
                                    android:id="@+id/tv_cheering"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="10dp"
                                    android:fontFamily="@font/bmjua"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="12.2sp" />

                        </LinearLayout>
                        <!--불꽃 (좋아요)-->

                        <!--댓글-->
                        <LinearLayout
                                android:id="@+id/ll_comment_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                            <ImageView
                                    android:id="@+id/iv_comment"
                                    android:layout_width="21dp"
                                    android:layout_height="21dp"
                                    android:layout_marginRight="9dp"
                                    android:contentDescription="@string/str_content_description"
                                    android:src="@drawable/ic_comment_gray" />


                            <TextView
                                    android:id="@+id/tv_comment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:fontFamily="@font/bmjua"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="12.2sp" />

                        </LinearLayout>
                        <!--댓글-->

                        <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                        <TextView
                                android:id="@+id/tv_add_follow"
                                android:layout_width="70dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:layout_marginRight="8dp"
                                android:background="@drawable/bg_round_rectangle_blue_2"
                                android:elevation="3dp"
                                android:fontFamily="@font/nanum_square_round_r"
                                android:gravity="center"
                                android:text="@string/str_add_follow"
                                android:textColor="@color/white"
                                android:textSize="13sp" />

                    </LinearLayout>

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginLeft="11dp"
                            android:layout_marginRight="11dp"
                            android:background="@color/white_six" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@null"
                            android:gravity="center|left"
                            android:orientation="horizontal">

                        <!--불꽃 (좋아요)-->
                        <LinearLayout
                                android:id="@+id/ll_cheering"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                            <ImageView
                                    android:id="@+id/iv_cheering"
                                    android:layout_width="14.3dp"
                                    android:layout_height="19.7dp"
                                    android:layout_marginRight="10.7dp"
                                    android:contentDescription="@string/str_content_description"
                                    android:src="@drawable/ic_flame" />

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nanum_square_round_eb"
                                    android:text="@string/str_cheering"
                                    android:textColor="@color/black"
                                    android:textSize="12.3sp" />

                        </LinearLayout>
                        <!--불꽃 (좋아요)-->

                        <!--댓글-->
                        <LinearLayout
                                android:id="@+id/ll_comment"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                            <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginRight="8.7dp"
                                    android:contentDescription="@string/str_content_description"
                                    android:src="@drawable/ic_comment_gray" />

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nanum_square_round_eb"
                                    android:text="@string/str_add_comment"
                                    android:textColor="@color/black"
                                    android:textSize="12.3sp" />

                        </LinearLayout>
                        <!--댓글-->

                        <!--공유하기-->
                        <LinearLayout
                                android:id="@+id/ll_share"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                            <ImageView
                                    android:layout_width="22.7dp"
                                    android:layout_height="20.7dp"
                                    android:layout_marginRight="8.7dp"
                                    android:contentDescription="@string/str_content_description"
                                    android:src="@drawable/ic_share" />

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nanum_square_round_eb"
                                    android:text="@string/str_sharing"
                                    android:textColor="@color/black"
                                    android:textSize="12.3sp" />

                        </LinearLayout>
                        <!--공유하기-->
                    </LinearLayout>

                </LinearLayout>
                <!--응원 / 댓글 / 공유-->

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_six" />

            </LinearLayout>

        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>