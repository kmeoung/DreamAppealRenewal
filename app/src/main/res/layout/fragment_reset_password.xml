<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <!-- Action Bar -->
    <include
            layout="@layout/action_bar_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <!-- Action Bar -->

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.7dp"
            android:layout_marginTop="15.7dp"
            android:fontFamily="@font/nanum_square_round_r"
            android:text="@string/str_reset_password_info"
            android:textColor="@color/black"
            android:textSize="13.3sp" />

    <!-- 이메일 주소 입력 -->
    <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="33.7dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="13.7dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/bg_empty_round_rectangle_gray"
            android:fontFamily="@font/nanum_square_round_r"
            android:hint="@string/str_hint_input_email"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="13.3dp"
            android:textColor="@color/black"
            android:textColorHint="@color/silver"
            android:textSize="11.8dp" />
    <!-- 이메일 주소 입력 -->

    <!-- 버튼 -->
    <Button
            android:id="@+id/btn_send_code"
            android:layout_width="match_parent"
            android:layout_height="33.7dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16.7dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/bg_empty_round_rectangle_blue"
            android:fontFamily="@font/nanum_square_round_r"
            android:text="@string/str_send_auth_code"
            android:textColor="@color/white"
            android:textSize="13.3dp" />
    <!-- 버튼 -->


</LinearLayout>