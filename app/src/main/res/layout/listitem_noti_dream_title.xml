<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="14.3dp"
        android:paddingRight="14.3dp">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/pale_grey" />


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/nanum_square_round_eb"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="14.3sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/nanum_square_round_r"
                android:maxLength="20"
                android:text="@string/str_name_value_style"
                android:textColor="@color/black"
                android:textSize="14.3sp" />

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18.6dp"
            android:gravity="center_horizontal|bottom"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/nanum_pen"
                android:maxLength="20"
                android:text="@string/str_dream_title"
                android:textColor="@color/main_blue"
                android:textSize="26.7sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/nanum_square_round_r"
                android:maxLength="20"
                android:text="@string/str_is_update_1"
                android:textColor="@color/black"
                android:textSize="14.3sp" />


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_marginTop="18.3dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/bg_round_box_gray_2"
            android:elevation="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical">

        <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/drawer_user"
                android:layout_marginLeft="11.5dp"
                android:layout_marginRight="12dp"
                android:id="@+id/iv_profile"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:gravity="center">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22.3sp"
                    android:fontFamily="@font/nanum_pen"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/tv_value_style"
                    android:text=""/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22.3sp"
                    android:fontFamily="@font/bmjua"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/tv_job"
                    android:text=""
                    android:layout_marginTop="4dp"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="bottom"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_round_r"
                android:textColor="@color/greyish"
                android:textSize="10sp" />

        <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        <TextView
                android:id="@+id/tv_go_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_round_r"
                android:text="@string/str_go_view"
                android:textColor="@color/nice_blue"
                android:textSize="12.3sp" />

    </LinearLayout>


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/pale_grey" />

</LinearLayout>