<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="34.3dp"
        android:paddingTop="18dp"
        android:paddingRight="21dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="24.3dp"
                android:layout_height="24.3dp"
                android:src="@drawable/drawer_user" />

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/nanum_square_round_b"
                    android:lines="1"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="16.7sp" />

            <TextView
                    android:id="@+id/tv_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/nanum_square_round_eb"
                    android:lines="1"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/dark_indigo"
                    android:textSize="16.7sp" />


        </LinearLayout>

    </LinearLayout>

    <TextView
            android:id="@+id/tv_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33.3dp"
            android:background="@drawable/bg_comment"
            android:paddingLeft="13.3dp"
            android:paddingTop="9.3dp"
            android:paddingRight="13.3dp"
            android:paddingBottom="9.3dp"
            android:lineSpacingExtra="@dimen/text_line_spacing"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_marginLeft="33.3dp">

        <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="14.7dp"
                android:fontFamily="@font/nanum_square_round_r"
                android:text="00분"
                android:textColor="@color/warm_grey_two"
                android:textSize="11.7sp" />

        <ImageView
                android:layout_width="12.7dp"
                android:layout_height="17dp"
                android:layout_marginRight="7dp"
                android:contentDescription="@string/str_content_description"
                android:src="@drawable/ic_flame"
                android:id="@+id/iv_like"/>

        <TextView
                android:id="@+id/tv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:fontFamily="@font/nanum_square_round_b"
                android:text="00개"
                android:textColor="@color/brown_grey"
                android:textSize="11.7sp" />

        <TextView
                android:id="@+id/tv_add_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:fontFamily="@font/nanum_square_round_b"
                android:text="@string/str_add_reply"
                android:textColor="@color/brown_grey"
                android:textSize="12.3sp" />


    </LinearLayout>

</LinearLayout>