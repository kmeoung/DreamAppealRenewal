<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:gravity="center_horizontal"
        android:orientation="vertical">

    <include
            layout="@layout/action_bar_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="3dp"/>

    <LinearLayout
            android:id="@+id/ll_edit_list"
            android:layout_width="match_parent"
            android:layout_height="42.7dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/white"
            android:elevation="3dp"
            android:visibility="gone">

        <!--새 꿈 추가하기-->
        <LinearLayout
                android:id="@+id/ll_add_dream"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/iv_add_dream"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="7dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_add_dream" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_b"
                    android:text="@string/str_add_dream"
                    android:textColor="@color/azure"
                    android:textSize="16sp" />
        </LinearLayout>
        <!--새 꿈 추가하기-->

        <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

        <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="9dp"
                android:src="@drawable/ic_edit" />

    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13.3sp"
            android:textColor="@color/brown_grey"
            android:text="@string/str_level_info"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:lineSpacingExtra="@dimen/text_line_spacing"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_dream_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

</LinearLayout>