<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

    <include
            layout="@layout/action_bar_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/tv_wish_title"
                        android:layout_width="0dp"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/nanum_square_round_r"
                        android:gravity="left|center_vertical"
                        android:lines="1"
                        android:maxLines="1"
                        android:paddingLeft="17.7dp"
                        android:textColor="@color/black"
                        android:textSize="14.7sp" />


                <ImageView
                        android:id="@+id/iv_action_more"
                        android:layout_width="45dp"
                        android:layout_height="30dp"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:src="@drawable/btn_more_black" />

            </LinearLayout>

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/white_six" />

            <!--Contents-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <RelativeLayout
                        android:id="@+id/rl_images"
                        android:layout_width="match_parent"
                        android:layout_height="360dp">

                    <androidx.viewpager.widget.ViewPager
                            android:id="@+id/pager_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/black" />

                    <LinearLayout
                            android:id="@+id/ll_indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/bg_black_box_indicator"
                            android:gravity="center"
                            android:padding="5dp">

                        <TextView
                                android:id="@+id/tv_indicator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanum_square_round_b"
                                android:text="10 / 10"
                                android:textSize="10sp"
                                android:textColor="@color/white" />

                    </LinearLayout>

                </RelativeLayout>

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/white_two" />

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/tv_contents"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:fontFamily="@font/nanum_square_round_r"
                            android:lineSpacingExtra="@dimen/text_line_spacing"
                            android:paddingLeft="13.7dp"
                            android:paddingRight="13.7dp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="13.3sp" />

                </RelativeLayout>

                <!--응원 / 댓글 / 공유-->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@null"
                            android:gravity="center|left"
                            android:orientation="horizontal"
                            android:paddingLeft="13.7dp"
                            android:paddingRight="20dp">

                        <!--불꽃 (좋아요)-->
                        <LinearLayout
                                android:id="@+id/ll_cheering_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingRight="10dp">

                            <ImageView
                                    android:layout_width="12.7dp"
                                    android:layout_height="17dp"
                                    android:layout_marginRight="5.7dp"
                                    android:contentDescription="@string/str_content_description"
                                    android:src="@drawable/flame_clicked" />

                            <TextView
                                    android:id="@+id/tv_cheering"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/bmjua"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="12.2sp" />

                        </LinearLayout>
                        <!--불꽃 (좋아요)-->

                        <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                        <TextView
                                android:id="@+id/tv_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanum_square_round_r"
                                android:textSize="10sp" />

                    </LinearLayout>

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginLeft="13.7dp"
                            android:layout_marginRight="13.7dp"
                            android:background="@color/white_six" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="18dp"
                            android:paddingTop="11dp"
                            android:paddingRight="12.7dp"
                            android:paddingBottom="11dp">

                        <TextView
                                android:id="@+id/tv_value_style"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/nanum_square_round_r"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:textSize="13.3sp" />

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                            <TextView
                                    android:id="@+id/tv_job_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/nanum_square_round_r"
                                    android:maxLines="1"
                                    android:textColor="@color/black"
                                    android:textSize="13.3sp" />

                            <ImageView
                                    android:layout_width="9dp"
                                    android:layout_height="9dp"
                                    android:layout_marginRight="5dp"
                                    android:src="@drawable/ic_circle_blue" />

                            <TextView
                                    android:id="@+id/tv_action_cnt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nanum_square_round_r"
                                    android:textColor="@color/black"
                                    android:textSize="11.2sp"
                                    android:layout_marginRight="20dp"/>

                            <ImageView
                                    android:layout_width="9dp"
                                    android:layout_height="9dp"
                                    android:layout_marginRight="5dp"
                                    android:src="@drawable/ic_circle_nice_blue" />

                            <TextView
                                    android:id="@+id/tv_achievement_cnt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nanum_square_round_r"
                                    android:textColor="@color/black"
                                    android:textSize="11.2sp" />



                        </LinearLayout>


                    </LinearLayout>

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginLeft="13.7dp"
                            android:layout_marginRight="13.7dp"
                            android:background="@color/white_six" />


                    <LinearLayout
                            android:id="@+id/ll_cheering"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                        <ImageView
                                android:id="@+id/iv_cheering"
                                android:layout_width="14.3dp"
                                android:layout_height="19.7dp"
                                android:layout_marginRight="10.7dp"
                                android:contentDescription="@string/str_content_description"
                                android:src="@drawable/ic_flame" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanum_square_round_eb"
                                android:text="@string/str_cheering"
                                android:textColor="@color/black"
                                android:textSize="12.3sp" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/greyish" />

                <!--응원 / 댓글 / 공유-->
            </LinearLayout>
            <!--Contents-->
        </LinearLayout>

    </ScrollView>
</LinearLayout>