<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <!--응원 / 댓글 / 공유-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="20dp">

            <!--불꽃 (좋아요)-->
            <LinearLayout
                    android:id="@+id/ll_cheering_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingRight="20dp">

                <ImageView
                        android:layout_width="12.7dp"
                        android:layout_height="17dp"
                        android:layout_marginRight="9.7dp"
                        android:contentDescription="@string/str_content_description"
                        android:src="@drawable/flame_clicked" />

                <TextView
                        android:id="@+id/tv_cheering"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bmjua"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="12.2sp" />

            </LinearLayout>
            <!--불꽃 (좋아요)-->

            <!--댓글-->
            <LinearLayout
                    android:id="@+id/ll_comment_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/iv_comment"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_marginRight="9dp"
                        android:contentDescription="@string/str_content_description"
                        android:src="@drawable/ic_comment_gray" />


                <TextView
                        android:id="@+id/tv_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/bmjua"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="12.2sp" />

            </LinearLayout>
            <!--댓글-->

            <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_r"
                    android:textSize="10sp" />

        </LinearLayout>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:background="@color/white_six" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:gravity="center|left"
                android:orientation="horizontal">

            <!--불꽃 (좋아요)-->
            <LinearLayout
                    android:id="@+id/ll_cheering"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/iv_cheering"
                        android:layout_width="14.3dp"
                        android:layout_height="19.7dp"
                        android:layout_marginRight="10.7dp"
                        android:contentDescription="@string/str_content_description"
                        android:src="@drawable/ic_flame" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_round_eb"
                        android:text="@string/str_cheering"
                        android:textColor="@color/black"
                        android:textSize="12.3sp" />

            </LinearLayout>
            <!--불꽃 (좋아요)-->

            <!--댓글-->
            <LinearLayout
                    android:id="@+id/ll_comment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="8.7dp"
                        android:contentDescription="@string/str_content_description"
                        android:src="@drawable/ic_comment_gray" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_round_eb"
                        android:text="@string/str_add_comment"
                        android:textColor="@color/black"
                        android:textSize="12.3sp" />

            </LinearLayout>
            <!--댓글-->

            <!--공유하기-->
            <LinearLayout
                    android:id="@+id/ll_share"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="22.7dp"
                        android:layout_height="20.7dp"
                        android:layout_marginRight="8.7dp"
                        android:contentDescription="@string/str_content_description"
                        android:src="@drawable/ic_share" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_round_eb"
                        android:text="@string/str_sharing"
                        android:textColor="@color/black"
                        android:textSize="12.3sp" />

            </LinearLayout>
            <!--공유하기-->

        </LinearLayout>

    </LinearLayout>
    <!--응원 / 댓글 / 공유-->


</LinearLayout>