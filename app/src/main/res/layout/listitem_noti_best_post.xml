<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="14.3dp"
        android:paddingRight="14.3dp"
        android:layout_marginTop="5dp">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/pale_grey" />


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/nanum_square_round_eb"
                android:maxLines="1"
                android:text="Google KoreA 서버개발자 서형중"
                android:textColor="@color/black"
                android:textSize="14.3sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/nanum_square_round_r"
                android:maxLength="20"
                android:text="@string/str_name_value_style"
                android:textColor="@color/black"
                android:textSize="14.3sp" />

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18.6dp"
            android:gravity="center_horizontal|bottom"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/nanum_pen"
                android:maxLength="20"
                android:text="@string/str_best_post"
                android:textColor="@color/amethyst"
                android:textSize="26.7sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/nanum_square_round_r"
                android:maxLength="20"
                android:text="@string/str_is_update_2"
                android:textColor="@color/black"
                android:textSize="14.3sp" />


    </LinearLayout>

    <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18.3dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="18dp"
            android:background="@color/nice_blue"
            android:elevation="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/bmjua"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/white"
            android:textSize="22.3sp" />

<!--    <TextView-->
<!--            android:id="@+id/tv_title"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="51dp"-->
<!--            android:layout_marginLeft="15dp"-->
<!--            android:layout_marginTop="18.3dp"-->
<!--            android:layout_marginRight="15dp"-->
<!--            android:layout_marginBottom="18dp"-->
