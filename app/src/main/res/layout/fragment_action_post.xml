<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center"
            android:orientation="horizontal">
        <!--꿈 프로필 이미지-->
        <ImageView
                android:id="@+id/iv_dream_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/drawer_user" />
        <!--꿈 프로필 이미지-->

        <!--꿈 수식어 및 꿈 명-->
        <LinearLayout
                android:id="@+id/ll_dream_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tv_value_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_pen"
                    android:text="천만 구독자"
                    android:textColor="@color/black"
                    android:textSize="21sp" />

            <TextView
                    android:id="@+id/tv_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/bmjua"
                    android:maxLength="30"
                    android:text="크리에이터"
                    android:textColor="@color/black"
                    android:textSize="17.5sp" />

        </LinearLayout>
        <!--꿈 수식어 및 꿈 명-->

        <ImageView
                android:id="@+id/iv_action_more"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:src="@drawable/btn_more_black" />

    </LinearLayout>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/pale_grey"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <!--Contents-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="18dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                    <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/ic_circle_blue" />

                    <TextView
                            android:id="@+id/tv_target"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/nanum_square_round_r"
                            android:lines="1"
                            android:maxLines="1"
                            android:text="내 주변 이슈에 관한 시사 영상을 제작해 유튜브 영상을 올리는 것이"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                    <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="8dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_side_blue" />

                    <TextView
                            android:id="@+id/tv_target_detail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/nanum_square_round_r"
                            android:lines="1"
                            android:maxLines="1"
                            android:text="내 주변 이슈에 관한 시사 영상을 제작해 유튜브 영상을 올리는 것이"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                    android:id="@+id/rl_images"
                    android:layout_width="match_parent"
                    android:layout_height="360dp">

                <androidx.viewpager.widget.ViewPager
                        android:id="@+id/pager_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                <LinearLayout
                        android:id="@+id/ll_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_black_box_indicator"
                        android:gravity="center"
                        android:padding="5dp">

                    <TextView
                            android:id="@+id/tv_indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanum_square_round_b"
                            android:text="10 / 10"
                            android:textColor="@color/white" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tv_contents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="21dp"
                        android:fontFamily="@font/nanum_square_round_r"
                        android:lineSpacingExtra="@dimen/text_line_spacing"
                        android:paddingLeft="12.7dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12.7dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="13.3sp" />

                <ImageView
                        android:id="@+id/iv_side_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:rotation="90"
                        android:src="@drawable/ic_side_blue" />

            </RelativeLayout>

            <include
                    layout="@layout/bottom_post_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
        </LinearLayout>
        <!--Contents-->

    </ScrollView>

</LinearLayout>