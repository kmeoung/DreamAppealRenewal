<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/llEmpty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivLight"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginTop="120dp"
                android:src="@drawable/ic_light_bulb" />

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/nanum_square_round_eb"
                android:text="@string/news_from_neighbors"
                android:textColor="@color/grey"
                android:textSize="14dp" />

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nanum_square_round_b"
                android:text="@string/setup_living_area"
                android:textColor="@color/grey"
                android:textSize="12dp" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSetupPlace"
                android:layout_width="160dp"
                android:layout_height="28dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_gradient_blue_radius_4"
                android:fontFamily="@font/nanum_square_round_eb"
                android:gravity="center"
                android:text="@string/setting_up_living_area"
                android:textColor="@color/white"
                android:textSize="12dp" />


    </LinearLayout>


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvChosenCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="13dp"
            android:ellipsize="end"
            android:fontFamily="@font/nanum_square_round_eb"
            android:maxLines="1"
            android:textColor="@color/black_1"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="#IT/로봇" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvChosenDistrict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:drawableEnd="@drawable/ic_blue_drop_down"
            android:drawablePadding="4dp"
            android:ellipsize="end"
            android:fontFamily="@font/nanum_square_round_eb"
            android:maxLines="1"
            android:textColor="@color/light_blue"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@id/tvChosenCity"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="#IT/로봇" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSearchAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="12dp"
            android:ellipsize="end"
            android:fontFamily="@font/nanum_square_round_b"
            android:maxLines="1"
            android:text="@string/change_residence"
            android:textColor="@color/light_blue"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <View
            android:id="@+id/vTop"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="13dp"
            android:background="@color/grey5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvChosenCity" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/srlRefresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vTop">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPosts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <androidx.constraintlayout.widget.Group
            android:id="@+id/groupListData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="tvChosenCity,tvChosenDistrict,tvSearchAddress,vTop,srlRefresh" />


</androidx.constraintlayout.widget.ConstraintLayout>