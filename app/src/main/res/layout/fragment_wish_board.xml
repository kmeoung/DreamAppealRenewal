<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


    <include
            layout="@layout/action_bar_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <RelativeLayout
                    android:id="@+id/rl_images"
                    android:layout_width="match_parent"
                    android:layout_height="155dp">

                <androidx.viewpager.widget.ViewPager
                        android:id="@+id/pager_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black" />

                <LinearLayout
                        android:id="@+id/ll_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                    <TextView
                            android:id="@+id/tv_indicator"
                            android:layout_width="74dp"
                            android:layout_height="20dp"
                            android:fontFamily="@font/nanum_square_round_b"
                            android:text="10 / 10"
                            android:background="@drawable/bg_promotion"
                            android:textColor="@color/black"
                            android:gravity="center"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="13.3dp"
                    android:paddingTop="6.3dp"
                    android:paddingBottom="4dp">

                <TextView
                        android:id="@+id/tv_wish_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/nanum_square_round_b"
                        android:text="@string/str_wish_title"
                        android:textColor="@color/black"
                        android:textSize="14.7sp" />

                <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="27dp"
                        android:orientation="horizontal"
                        android:layout_marginRight="3.7dp"
                        android:background="@drawable/bg_round_main_blue"
                        android:gravity="center"
                        android:id="@+id/ll_add_wish">

                    <ImageView
                            android:layout_width="22dp"
                            android:layout_height="19dp"
                            android:src="@drawable/ic_lamp"
                            android:layout_marginRight="4dp"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanum_square_round_b"
                            android:textSize="15.7sp"
                            android:gravity="center"
                            android:text="@string/str_add_wish"
                            android:textColor="@color/white" />


                </LinearLayout>



            </LinearLayout>

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/pale_grey"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_wish"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>