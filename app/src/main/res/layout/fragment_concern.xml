<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38.7dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="5.3dp"
            android:paddingRight="5.3dp">

        <ImageView
                android:id="@+id/iv_my"
                android:layout_width="38dp"
                android:layout_height="29dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_concern_my"
                android:scaleType="centerInside"
                android:background="@drawable/bg_round_main_blue" />

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="29dp"
                android:layout_weight="1"
                android:background="@drawable/bg_search"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_search_gray" />

            <EditText
                    android:id="@+id/et_search"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:fontFamily="@font/nanum_square_round_r"
                    android:hint="@string/str_hint_search"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:lines="1"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHint="@color/cool_grey"
                    android:textSize="14.7sp" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_write"
                android:layout_width="95dp"
                android:layout_height="29dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bg_round_main_blue"
                android:gravity="center">

            <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="9dp"
                    android:src="@drawable/ic_edit_white" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_eb"
                    android:text="@string/str_write"
                    android:textColor="@color/white"
                    android:textSize="14.7sp" />

        </LinearLayout>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_concern"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white_three"/>

</LinearLayout>