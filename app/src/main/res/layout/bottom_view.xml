<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_bottom" xmlns:android="http://schemas.android.com/apk/res/android">
    <!--하단 Nav-->
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/underline_gray"
            android:contentDescription="@string/content_description"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/bottom_nav_color"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/iv_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:src="@drawable/house_black_silhouette_without_door"
                android:contentDescription="@string/content_description"/>

        <ImageView
                android:id="@+id/iv_timeline"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:src="@drawable/check_list"
                android:contentDescription="@string/content_description"/>

        <ImageView
                android:id="@+id/iv_add_board"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:src="@drawable/edit"
                android:contentDescription="@string/content_description"/>

        <ImageView
                android:id="@+id/iv_notification"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:src="@drawable/bell"
                android:contentDescription="@string/content_description"/>

        <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:scaleX="0.6"
                android:scaleY="0.63"
                android:src="@drawable/user"
                android:contentDescription="@string/content_description"/>
    </LinearLayout>

</LinearLayout>