<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="14.3dp"
        android:paddingRight="14.3dp"
        android:background="@color/white">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/pale_grey" />


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="32dp">

        <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/nanum_square_round_eb"
                android:maxLength="20"
                android:textColor="@color/black"
                android:textSize="14.3sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/nanum_square_round_r"
                android:maxLength="20"
                android:text="@string/str_name_value_style"
                android:textColor="@color/black"
                android:textSize="14.3sp" />

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18.6dp"
            android:gravity="center_horizontal|bottom"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_puzzle_orange"
                android:rotation="90"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/nanum_pen"
                android:maxLength="20"
                android:text="@string/str_opportunity"
                android:textColor="@color/faded_orange"
                android:textSize="26.7sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/nanum_square_round_r"
                android:maxLength="20"
                android:text="@string/str_is_update_2"
                android:textColor="@color/black"
                android:textSize="14.3sp" />


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_marginBottom="10dp">

        <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_round_r"
                android:textColor="@color/greyish"
                android:textSize="10sp" />

        <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <TextView
                android:id="@+id/tv_go_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_round_r"
                android:textColor="@color/nice_blue"
                android:text="@string/str_go_view"
                android:textSize="12.3sp" />

    </LinearLayout>


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/pale_grey" />

</LinearLayout>