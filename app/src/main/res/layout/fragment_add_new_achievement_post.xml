<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/search_box"
        android:orientation="vertical">

    <include
            layout="@layout/action_bar_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                <EditText
                        android:layout_marginLeft="17dp"
                        android:id="@+id/et_title"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:fontFamily="@font/nanum_square_round_b"
                        android:hint="제목을 입력해 주세요"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLines="1"
                        android:textColorHint="#bfbfbf"
                        android:textSize="16sp" />

            </LinearLayout>

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/pale_grey" />



            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_image"
                    android:layout_width="match_parent"
                    android:layout_height="158dp"/>

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/pale_grey" />


            <EditText
                    android:id="@+id/et_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="202dp"
                    android:background="@color/white"
                    android:fontFamily="@font/nanum_square_round_r"
                    android:gravity="top|left"
                    android:hint="@string/str_input_comment"
                    android:padding="16dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/brown_grey"
                    android:textSize="14.7sp" />

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/pale_grey" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>