<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/thumb"
        android:layout_height="@dimen/thumb"
        android:background="@null"
        android:orientation="vertical">

        <LinearLayout
                android:layout_width="@dimen/inner_thumb"
                android:layout_height="@dimen/inner_thumb"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:elevation="@dimen/popular_item_elevation"
                android:background="@color/black">

            <RelativeLayout
                    android:layout_width="@dimen/inner_thumb"
                    android:layout_height="@dimen/inner_thumb">

                <ImageView
                        android:id="@+id/iv_book_cover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@color/black" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#80000000"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingTop="9dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="3.7dp">

                    <TextView
                            android:id="@+id/tv_value_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/nanum_pen"
                            android:maxLines="2"
                            android:text="갓난아이도 들썩이게 하는"
                            android:textColor="@color/white"
                            android:textSize="19.7sp" />

                    <TextView
                            android:id="@+id/tv_job"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/bmjua"
                            android:maxLines="1"
                            android:text="애기"
                            android:textColor="@color/white"
                            android:textSize="17sp" />

                    <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5.3dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/jalnan"
                            android:maxLines="1"
                            android:text="애기"
                            android:textColor="@color/white"
                            android:textSize="17sp" />


                    <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="14dp"
                                android:layout_height="18dp"
                                android:layout_marginRight="5.3dp"
                                android:src="@drawable/flame_clicked" />

                        <TextView
                                android:id="@+id/tv_cheering"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanum_square_round_b"
                                android:text="0개"
                                android:textColor="@color/white"
                                android:textSize="10.7sp" />

                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>
</LinearLayout>