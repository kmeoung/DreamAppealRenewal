<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:orientation="vertical">


    <!--툴바-->
    <include
            layout="@layout/action_bar_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <!--툴바-->

    <!--회원가입 버튼-->
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="21.7dp"
                android:paddingTop="21.7dp"
                android:paddingRight="30dp">

            <!--이름-->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_r"
                    android:text="@string/str_name"
                    android:textColor="@color/colorAccent"
                    android:textSize="13.3sp" />

            <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="33.7dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/bg_empry_round_rectangle_gray"
                    android:fontFamily="@font/nanum_square_round_r"
                    android:hint="@string/str_name_hint"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:lines="1"
                    android:paddingLeft="13dp"
                    android:paddingRight="10dp"
                    android:textColorHint="@color/text_gray"
                    android:textSize="11.8sp" />
            <!--이름-->

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <!--생일-->
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="17.3dp"
                            android:fontFamily="@font/nanum_square_round_r"
                            android:text="@string/str_birthday"
                            android:textColor="@color/colorAccent"
                            android:textSize="13.3sp" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="27.3dp"
                            android:layout_marginTop="9dp"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/tv_year"
                                android:layout_width="81.3dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="7dp"
                                android:background="@drawable/bg_empry_round_rectangle_gray"
                                android:fontFamily="@font/nanum_square_round_r"
                                android:gravity="center"
                                android:hint="@string/str_year"
                                android:textColor="@color/black"
                                android:textColorHint="@color/text_gray"
                                android:textSize="11.8sp" />

                        <TextView
                                android:id="@+id/tv_month"
                                android:layout_width="42.3dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="7dp"
                                android:background="@drawable/bg_empry_round_rectangle_gray"
                                android:fontFamily="@font/nanum_square_round_r"
                                android:gravity="center"
                                android:hint="@string/str_month"
                                android:textColor="@color/black"
                                android:textColorHint="@color/text_gray"
                                android:textSize="11.8sp" />


                        <TextView
                                android:id="@+id/tv_date"
                                android:layout_width="42.3dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_empry_round_rectangle_gray"
                                android:fontFamily="@font/nanum_square_round_r"
                                android:gravity="center"
                                android:hint="@string/str_date"
                                android:textColor="@color/black"
                                android:textColorHint="@color/text_gray"
                                android:textSize="11.8sp" />

                    </LinearLayout>

                </LinearLayout>
                <!--생일-->

                <!--성별-->
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="17.3dp"
                            android:fontFamily="@font/nanum_square_round_r"
                            android:text="@string/str_gender"
                            android:textColor="@color/colorAccent"
                            android:textSize="13.3sp" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="27.3dp"
                            android:layout_marginTop="9dp"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/tv_gender"
                                android:layout_width="112dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_empry_round_rectangle_gray"
                                android:fontFamily="@font/nanum_square_round_r"
                                android:gravity="center"
                                android:hint="@string/str_gender"
                                android:textColor="@color/black"
                                android:textColorHint="@color/text_gray"
                                android:textSize="11.8sp" />

                    </LinearLayout>

                </LinearLayout>
                <!--성별-->

            </LinearLayout>

            <!--아이디-->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17.3dp"
                    android:fontFamily="@font/nanum_square_round_r"
                    android:text="@string/str_id"
                    android:textColor="@color/colorAccent"
                    android:textSize="13.3sp" />

            <EditText
                    android:id="@+id/et_id"
                    android:layout_width="match_parent"
                    android:layout_height="33.7dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/bg_empry_round_rectangle_gray"
                    android:fontFamily="@font/nanum_square_round_r"
                    android:hint="@string/str_id_hint"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:paddingLeft="13dp"
                    android:paddingRight="10dp"
                    android:textColorHint="@color/text_gray"
                    android:textSize="11.8sp" />
            <!--아이디-->

            <!--비밀번호-->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17.3dp"
                    android:fontFamily="@font/nanum_square_round_r"
                    android:text="@string/str_password"
                    android:textColor="@color/colorAccent"
                    android:textSize="13.3sp" />

            <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="33.7dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/bg_empry_round_rectangle_gray"
                    android:fontFamily="@font/nanum_square_round_r"
                    android:hint="@string/str_password_hint"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:paddingLeft="13dp"
                    android:paddingRight="10dp"
                    android:textColorHint="@color/text_gray"
                    android:textSize="11.8sp" />

            <EditText
                    android:id="@+id/et_re_password"
                    android:layout_width="match_parent"
                    android:layout_height="33.7dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/bg_empry_round_rectangle_gray"
                    android:fontFamily="@font/nanum_square_round_r"
                    android:hint="@string/str_check_password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:paddingLeft="13dp"
                    android:paddingRight="10dp"
                    android:textColorHint="@color/text_gray"
                    android:textSize="11.8sp" />
            <!--비밀번호-->

            <!--모두 동의-->
            <LinearLayout
                    android:id="@+id/ll_all_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/iv_all_agree"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="6dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_check_circle" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_round_b"
                        android:text="@string/str_all_agreement"
                        android:textColor="@color/black"
                        android:textSize="13.3sp" />

            </LinearLayout>
            <!--모두 동의-->

            <!--이용약관 동의-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.7dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <LinearLayout
                        android:id="@+id/ll_terms_of_use"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    <ImageView
                            android:id="@+id/iv_terms_of_use"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="6dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_check_circle" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanum_square_round_r"
                            android:text="@string/str_terms_of_use"
                            android:textColor="@color/black"
                            android:textSize="11sp" />

                </LinearLayout>

                <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <TextView
                        android:id="@+id/tv_terms_of_use_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_round_r"
                        android:text="@string/str_agreement_dtail"
                        android:textColor="@color/black"
                        android:textSize="11sp" />


            </LinearLayout>
            <!--이용약관 동의-->

            <!--마케팅 정보 수신 동의-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.3dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <LinearLayout
                        android:id="@+id/ll_privacy_policy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    <ImageView
                            android:id="@+id/iv_privacy_policy"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="6dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_check_circle" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanum_square_round_r"
                            android:text="@string/str_privacy_policy"
                            android:textColor="@color/black"
                            android:textSize="11sp" />

                </LinearLayout>

                <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <TextView
                        android:id="@+id/tv_privacy_policy_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_round_r"
                        android:text="@string/str_agreement_dtail"
                        android:textColor="@color/black"
                        android:textSize="11sp" />


            </LinearLayout>
            <!--개인정보처리방침 동의-->

            <!--개인정보처리방침 동의-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.3dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="30dp">

                <LinearLayout
                        android:id="@+id/ll_receive_marketing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    <ImageView
                            android:id="@+id/iv_receive_marketing"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="6dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_check_circle" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanum_square_round_r"
                            android:text="@string/str_receive_marketing"
                            android:textColor="@color/black"
                            android:textSize="11sp" />

                </LinearLayout>

                <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <TextView
                        android:id="@+id/tv_receive_marketing_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_round_r"
                        android:text="@string/str_agreement_dtail"
                        android:textColor="@color/black"
                        android:textSize="11sp" />


            </LinearLayout>
            <!--마케팅 정보 수신 동의-->

        </LinearLayout>

    </ScrollView>

</LinearLayout>