<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_three"
        android:orientation="vertical">


    <TextView
            android:id="@+id/coupon_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/nanum_square_round_r"
            android:text="@string/str_coupon_info"
            android:textColor="@color/black"
            android:textSize="15.7sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <EditText
            android:id="@+id/et_coupon"
            android:layout_width="0dp"
            android:layout_height="40.3dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bg_white_rectangle_gray_2"
            android:fontFamily="@font/nanum_square_round_b"
            android:importantForAutofill="no"
            android:maxLength="16"
            android:inputType="text"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/coupon_info" />

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/nanum_square_round_r"
            android:text="@string/str_coupon_info_2"
            android:textColor="@color/brown_grey"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_coupon" />

    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/nanum_square_round_r"
            android:text="@string/str_coupon_info_3"
            android:textColor="@color/brown_grey"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
            android:id="@+id/btn_input"
            android:layout_width="155dp"
            android:layout_height="34.7dp"
            android:layout_marginTop="10dp"
            android:text="@string/str_confirm"
            android:textColor="@color/white"
            android:textSize="14.7sp"
            android:fontFamily="@font/nanum_square_round_r"
            android:background="@drawable/bg_round_rectangle_blue_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>