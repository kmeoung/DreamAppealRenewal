<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>


    <!--TabLayout 폰트 설정-->
    <style name="profile_main_tab_font" parent="android:TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/nanum_pen</item>
        <item name="android:textSize">20.64sp</item>
    </style>

    <!--EditText 하단 바 색상 설정-->
    <style name="edit_text_under_bar_color" parent="Widget.AppCompat.EditText">
        <item name="android:colorControlNormal">@color/main_blue</item>
        <item name="android:colorControlActivated">@color/main_blue</item>
        <item name="android:textCursorDrawable">@color/main_blue</item>
    </style>

    <!-- Chip 설정 -->
    <style name="ChipTextStyle">
        <item name="android:textSize">14.7sp</item>
        <item name="android:fontFamily">@font/nanum_square_round_b</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
